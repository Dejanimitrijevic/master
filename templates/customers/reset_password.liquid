<div class="central py-medium" id="template">
  <div class="template_header">
    <h1 class="title" data-cc-animate data-cc-animate-delay="0.95s">{{ 'customer.reset_password.title' | t }}</h1>
    <p class="note">{{ 'customer.reset_password.subtext' | t: email: email }}</p>
  </div>

  {% form 'reset_customer_password' %}
  {{ form.errors | default_errors }}
  <div class="form">
    <div id="password" class="input-row">
      <input aria-label="{{ 'customer.reset_password.password' | t }}" placeholder="{{ 'customer.reset_password.password' | t }}" type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
    </div>
    <div id="password_confirm" class="input-row">
      <input aria-label="{{ 'customer.reset_password.password_confirm' | t }}" placeholder="{{ 'customer.reset_password.password_confirm' | t }}" type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
    </div>
    <div class="wide-action">
      <input type="submit" value="{{ 'customer.reset_password.submit' | t }}" />
    </div>
  </div>
  {% endform %}
</div>
